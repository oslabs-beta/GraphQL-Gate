{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb-base",
        "airbnb-typescript/base",
        "plugin:@typescript-eslint/recommended",
        "plugin:import/typescript",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "project": "./tsconfig.eslint.json"
    },
    "plugins": ["import"],
    "rules": {
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 2
            }
        ]
    }, 
    "ignorePatterns": ["jest.config.js"]
}
